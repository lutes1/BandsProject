@using Bands.WEB.Models.ViewModels
@model EquipmentViewModel

@{
    ViewData["Title"] = "EquipmentsManagePartial";
}
@{
    var iconDeleteHidden = "hidden";

    if (Model.EquipmentId != 0)
    {
        iconDeleteHidden = string.Empty;
    }
}

<form class="equipments-edit-form" id="equipments-update-form-@Model.EquipmentId" asp-action="AddEquipment">
    <div class="text-right  @iconDeleteHidden">
        <button id="delete-equipment-@Model.EquipmentId" class="btn btn-light"><div class='cross-icon-equipments'>&#10005</div></button>
    </div>
    <input asp-for="EquipmentId" type="hidden" class="form-control" />

    <div class="form-group no-margin">
        <div class="input-group mb-2">
            <div class="input-group-prepend">
                <div class="input-group-text label-profile-edit">
                    <label asp-for="EquipmentName" class="control-label">Name</label>
                </div>
            </div>
            <input asp-for="EquipmentName" disabled="disabled" class="form-control" />
        </div>
        <span asp-validation-for="EquipmentName" class="text-danger"></span>
    </div>
    <div class="form-group no-margin">
        <div class="input-group mb-2">
            <div class="input-group-prepend">
                <div class="input-group-text label-profile-edit">
                    <label asp-for="EquipmentModel" class="control-label">Model</label>
                </div>
            </div>
            <input asp-for="EquipmentModel" disabled="disabled" class="form-control" />
        </div>
        <span asp-validation-for="EquipmentModel" class="text-danger"></span>
    </div>
    <div class="form-group no-margin">
        <div class="input-group mb-2">
            <div class="input-group-prepend">
                <div class="input-group-text label-profile-edit">
                    <label asp-for="EquipmentType" class="control-label">Type</label>
                </div>
            </div>
            <input asp-for="EquipmentType" disabled="disabled" class="form-control" />
        </div>
        <span asp-validation-for="EquipmentType" class="text-danger"></span>
    </div>
    @if (Model.EquipmentId == 0)
    {
        <div class="text-center">
            <input type="submit" id="equipment-submit-@Model.EquipmentId---" class="btn btn-default" value="Save">
        </div>
    }

</form>
<div id="equipments-callback-message-@Model.EquipmentId"></div>