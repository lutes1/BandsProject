@model Bands.WEB.Models.ViewModels.BandViewModel
<h5>Add a band</h5>
<div class="bands-create-form" id="band-create-form">
    <div class="form-group no-margin">
        <div class="input-group mb-2">
            <div class="input-group-prepend">
                <div class="input-group-text label-profile-edit">
                    <label asp-for="BandName" class="control-label">Name</label>
                </div>
            </div>
            <input asp-for="BandName" class="form-control" placeholder="name..." />
        </div>
        <span asp-validation-for="BandName" class="text-danger"></span>
    </div>
    <div class="form-group no-margin">
        <div class="input-group mb-2">
            <div class="input-group-prepend">
                <div class="input-group-text label-profile-edit">Genres</div>
            </div>
            <input type="text" maxlength="20" title="No more than 20 characters" class="form-control" id="genres-edit" placeholder="genres...">
            <div id="genres-edit-container"></div>
        </div>
    </div>
    <div class="text-center">
        <button id="band-submit" class="btn btn-default">Save</button>
    </div>
</div>
<div id="band-callback-message"></div>